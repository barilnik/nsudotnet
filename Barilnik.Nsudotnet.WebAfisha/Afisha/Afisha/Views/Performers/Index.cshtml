@model IEnumerable<Afisha.Models.Performer>

@{
    ViewBag.Title = "Index";
}

<h2>Performers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index")
        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PerformerID }) |
            @Html.ActionLink("Biography", "Details", new { id=item.PerformerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PerformerID })
        </td>
    </tr>
}

</table>
